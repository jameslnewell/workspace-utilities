{
  "private": true,
  "name": "workspace-utilities",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "prettier": "^2.5.1"
  },
  "scripts": {
    "check": "yarn run check:types",
    "check:types": "yarn workspaces foreach run check:types",
    "build": "yarn run build:types && yarn run build:transpile",
    "build:types": "yarn workspaces foreach run build:types",
    "build:transpile": "yarn workspaces foreach run build:transpile",
    "develop": "yarn workspaces foreach run develop",
    "test": "yarn workspaces foreach run test",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "packageManager": "pnpm@7.1.7"
}
